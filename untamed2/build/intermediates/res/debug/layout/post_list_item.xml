<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Bottom View Start-->
    <RelativeLayout
        android:background="#FF0000"
        android:orientation="vertical"
        android:id="@+id/bottom_wrapper"
        android:layout_width="60dp"
        android:weightSum="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView1"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_delete" />
        <!--What you want to show-->
    </RelativeLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <RelativeLayout
        android:orientation="vertical"
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--What you want to show in SurfaceView-->
        
   <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">
 
    <TextView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

        <ImageView
            android:id="@+id/avatarimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            />


    </LinearLayout>
    
    
    <TextView
        android:id="@+id/text"
       	android:layout_toRightOf="@id/thumbnail"
       	android:layout_marginTop="5dip"
       	android:layout_marginBottom="2dip"
       	android:layout_marginRight="65dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <TextView
        android:id="@+id/likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:layout_gravity="bottom"
            android:textColor="@color/gray"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/text"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail" />


        <LinearLayout android:id="@+id/expiretime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dip">
     
       <!--  ListRow Left side Thumbnail image -->
    <TextView
        android:id="@+id/expires"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="center"
        android:textColor="@color/gray"
        
        />
        </LinearLayout>


        <ImageButton
            android:src="@drawable/ic_action_next_item_black"
            android:id="@+id/comvote"
            android:background="@null"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_below="@id/expiretime"
            android:layout_alignRight="@id/expiretime"
            android:layout_alignEnd="@id/expiretime" />


    </RelativeLayout>
    <!-- Surface View End -->

</com.daimajia.swipe.SwipeLayout><!-- From: file:/C:/Users/Nick/workspace/Untamed/untamed2/src/main/res/layout/post_list_item.xml -->